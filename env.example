## Encryption (SSL/TLS) options
IRC_USE_SSL=true
IRC_CERT_ALLOW_EXPIRED=false
IRC_CERT_ALLOW_SELFSIGNED=false


#####----- IRC channel settings -----#####
IRC_CHANNEL="#channel"
IRC_CHANNEL_KEY=""
