###############################################################################

#####----- Configuration settings -----#####
DEBUG=false
DISABLE_RELAY_TO_IRC=false
DISABLE_RELAY_TO_TELEGRAM=false



###############################################################################
#                                                                             #
#                       IRC configuration settings                            #
#                                                                             #
###############################################################################

#####----- Host connection settings -----#####
IRC_HOST_IP=""


#####----- IRC server connection settings -----#####
IRC_SERVER=chat.freenode.net
IRC_SERVER_PASSWORD=""
